<h3>店舗追加</h3>

<%= form_for @shop do |f| %>
  <% if @shop.errors.any? %>
    <% @shop.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <% end %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
